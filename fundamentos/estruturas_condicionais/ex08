<body>
    <script>
        var nome1 = prompt('Digite o nome da primeira pessoa:');
        var peso1 = parseFloat(prompt('Digite o peso da primeira pessoa: '), 10);

        var nome2 = prompt('Digite o nome da primeira pessoa:');
        var peso2 = parseFloat(prompt('Digite o peso da segunda pessoa:'), 10);

        if(peso1 > peso2){
            alert(`A pessoa mais pesada é ${nome1} com ${peso1}Kg's.`);
        }else{
            alert(`A pessoa mais pesada é ${nome2} com ${peso2}Kg's.`);
        }
    </script>
</body>
</html>
