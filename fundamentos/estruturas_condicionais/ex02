    <script>
        var n = parseInt(prompt('Digite um número inteiro qualquer:'), 10);

        if(n % 2 === 0){
            alert(`O número ${n} é par.`);
        }else{
            alert(`O número ${n} é ímpar.`);
        }
    </script>
