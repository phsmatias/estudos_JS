<body>
    <script>
        var n1 = parseInt(prompt('Informe o primeiro número:'), 10);
        var n2 = parseInt(prompt('Informe o segundo número:'), 10);

        if(n1 > n2){
            alert(`O maior número é o ${n1}.`);
        }else if(n2 > n1){
            alert(`O maior número é o ${n2}.`);
        }else{
            alert(`O números são iguais.`);
        }
    </script>
</body>
</html>
