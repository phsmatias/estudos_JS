<body>
    <script>
        var n = parseInt(prompt('Digite um número qualquer:'), 10);

        if(n > 0){
            alert(`A metade de ${n} é ${(n/2).toFixed(2)}`);
        }else{
            alert(`${n} elevado ao quadrado é igual a ${(n**2).toFixed(2)}`);
        }
    </script>
</body>
</html>
