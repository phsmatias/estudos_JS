<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exercício 016</title>
</head>
<body>
    <script>
        var salario = parseFloat(prompt('Informe o seu sálario e veja o reajuste salarial da sua categoria:'), 10);

        if(salario <= 400){
            alert(`Reajuste de 15%, sálario novo: R$${(salario + (salario * 0.15)).toFixed(2)}.`);
        }else if(salario <= 700){
            alert(`Reajuste de 12%, sálario novo: R$${(salario + (salario * 0.12)).toFixed(2)}.`);
        }else if(salario <= 1000){
            alert(`Reajuste de 10%, sálario novo: R$${(salario + (salario * 0.10)).toFixed(2)}.`);
        }else if(salario <= 1800){
            alert(`Reajuste de 7%, sálario novo: R$${(salario + (salario * 0.07)).toFixed(2)}.`);
        }else if(salario <= 2500){
            alert(`Reajuste de 4%, sálario novo: R$${(salario + (salario * 0.04)).toFixed(2)}.`);
        }else{
            alert('Sem aumento salarial para sua categoria!');
        }
    </script>
</body>
</html>
