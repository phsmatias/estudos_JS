<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exercício 026</title>
</head>

<body>
    <script>
        var n1 = parseInt(prompt('Informe o primeiro número:'), 10);
        var n2 = parseInt(prompt('Informe o segundo número:'), 10);
        var op = prompt('Qual operação deseja realizar? (*)Multiplicação (/)Divisão (+)Soma (-)Subtração:');


        switch (op) {
            case '+':
                alert(`Resultado: ${n1 + n2}`);
                break;
            case '-':
                alert(`Resultado: ${n1 - n2}`);
                break;
            case '/':
                alert(`Resultado: ${n1 / n2}`);
                break;
            case '*':
                alert(`Resultado: ${n1 * n2}`);
                break;
        }
    </script>
</body>

</html>
