<body>
    <script>
        var n = parseInt(prompt('Digite um número inteiro positivo qualquer:'), 10);

        if(n % 3 === 0){
            alert('O número informado é múltiplo de 3.');
        }else{
            alert('O número informado não é múltiplo de 3.');
        }
    </script>
