<body>
    <script>
        var n1 = parseInt(prompt('Digite o primeiro número:'), 10);
        var n2 = parseInt(prompt('Digite o segundo número:'), 10);

        if(n1 % n2 === 0){
            alert(`A divisão de ${n1} por ${n2} é exata.`);
        }else{
            alert(`A divisão de ${n1} por ${n2} não é exata.`)
        }
    </script>
</body>
