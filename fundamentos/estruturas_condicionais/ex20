    <script>
        var idade = parseInt(prompt('Informe a idade do pretendente a matrícula:'), 10);

        if(idade === 4 || idade === 5){
            alert('Tem vaga na turma A.');
        }else if(6 <= idade && idade <= 8){
            alert('Tem vaga na turma B.');
        }else if(9 <= idade && idade <= 10){
            alert('Tem vaga na turma C.');
        }else{
            alert('Infelizmente não possuímos vagas para alunos com menos de 4 anos ou mais de 10 anos.');
        }
    </script>
