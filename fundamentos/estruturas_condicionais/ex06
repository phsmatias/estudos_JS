<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exercício 06</title>
</head>
<body>
    <script>
        let nota = 0;
        const pesos = [2, 3, 5];
        for(var i=0; i<3; i++){
            var prova = parseInt(prompt(`Digite a nota de ${i + 1}º prova:`), 10);
            nota += prova * pesos[i];
        }

        if(nota / 10 >= 7.0){
            alert(`O aluno foi aprovado com média ${(nota/10).toFixed(2)}.`);
        }else{
            alert(`O aluno foi reprovado com média ${(nota/10).toFixed(2)}.`);
        }
    </script>
</body>
</html>
