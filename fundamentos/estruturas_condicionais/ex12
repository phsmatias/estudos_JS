    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exercício 012</title>
</head>
<body>
    <script>
        var sexo = prompt('Informe o seu sexo (M/F):').toUpperCase();
        var altura = parseFloat(prompt('Informe a sua altura (apenas números, exemplo: 1.76):'), 10);
        
        if(sexo == 'M'){
            alert(`Sendo do sexo masculino, e com altura de ${altura}, você deve pesar ${((altura*72.7) - 58).toFixed(2)}`);
        }else{
            alert(`Sendo do sexo feminino, e com altura de ${altura}, você deve pesar ${((altura*62.1) - 44.7).toFixed(2)}`);
        }
    </script>
</body>
</html>
