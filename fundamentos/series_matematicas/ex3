<body>
    <script>
        /*ENUNCIADO: Desenvolva um algoritmo que calcule o valor de S para um determinado valor de n informado pelo usuário a partir da seguinte expressão:

            Sn = 1/2 + 2/3 + 3/4 + ... + n/n+1
        */

        var n = prompt('Informe o valor de n:');
        var res = 0;

        for(var i=1; i<=n; i++){
            res += (i/(i+1));
        }
        alert(`Valor final: ${res}`);
    </script>
</body>
</html>
