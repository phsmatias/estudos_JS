    <script src="./jquery-3.7.1.js"></script>
    <script>
        //Desenvolva um algoritmo que calcule o valor de pi a partir da seguinte expressão matemática

        //          n
        // pi = 4 . Σ (-1)^k . (1/(2k + 1))
        //         k=0

        var n = parseInt(prompt(`Defina o valor de n:`), 10);
        var termoSomatorio = 0;
        var segundaExpressao = 0;

        for(var i=0; i<=n; i++){
            termoSomatorio += (-1)**i
            segundaExpressao += (1/2*i + 1);
        }
        console.log(termoSomatorio);
    </script>
