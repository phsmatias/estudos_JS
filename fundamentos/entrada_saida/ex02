    <script>
        var temp = parseInt(prompt('Informe a temperatura em graus Celsius: '), 10);
        var conversao = ((temp * (9/5)) + 32);
        alert(`${temp}º Celsius é equivalente a ${conversao}º em Fahrenheit.`);
    </script>
