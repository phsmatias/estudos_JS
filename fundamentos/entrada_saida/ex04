    <script>
        var pesoGramas = parseInt(prompt('Informe seu peso em gramas:'), 10);
        var pesoReajustado = pesoGramas + (pesoGramas * (12/100));
        alert(`O seu novo peso reajustado em 12% é ${pesoReajustado}`);
    </script>
