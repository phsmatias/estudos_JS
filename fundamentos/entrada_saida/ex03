<body>
    <script>
        var salarioMinimo = parseFloat(prompt('Qual o valor do sálario mínimo?'), 10);
        var salario = parseFloat(prompt('Qual o valor do seu sálario?'), 10);

        var res = salario / salarioMinimo;

        alert(`Você recebe o equivalente a ${res.toFixed(2)} sálarios mínimos.`);
    </script>
</body>
</html>
