    <p id="resposta"></p>
    <script>
        //Enunciado: Elabore um algoritmo que imprima todos os números pares de 1 até 100.
        
        for(var i = 0; i<=100; i++){
            if(i % 2 === 0){
                document.getElementById('resposta').innerHTML += ` ${i} `;
            }
        }
    </script>
