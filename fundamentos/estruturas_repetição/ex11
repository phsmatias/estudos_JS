<body>

    <div id="respostas">

    </div>

    <script>
        /*Enunciado: Elabore um algoritmo que imprima a tabuada de um número que será informado pelo usuário.*/

        var num = parseInt(prompt('Informe um número e veja sua tabuada:'), 10);

        for(var i=1; i<=10; i++){
            document.getElementById('respostas').innerHTML += ` <p>${num}x${i} = ${num * i}</p> `;
        }
    </script>
