    <script>
        //ENUNCIADO: Dado o tamanho do raio de uma circunferência, calcular a área e o perímetro da mesma.

        let raio = parseFloat(prompt('Digite o raio da circunferência:'), 10);

        console.log(`Área da círculo: ${3.14 * raio**2}  Perímetro da circunferência: ${2 * 3.14 * raio}`);
    </script>
