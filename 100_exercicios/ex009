<body>
    <script>
        //ENUNCIADO: Faça um algoritmo que calcule e apresente o valor do volume de uma lata de óleo, dado seu raio e sua altura.

        var raio = Number(prompt('Informe a medida do raio da lata de óleo:'), 10);
        var altura = Number(prompt('Informe a medida da altura da lata de óleo:'), 10);

        var volume = (3.14 * raio**2) * altura;

        console.log(`Volume da lata de óleo: ${volume}.`);
    </script>
