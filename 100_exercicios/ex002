        //ENUNCIADO: Dado o tamanho do lado de um quadrado, calcular a área e o perímetro do mesmo.

        let lado = parseFloat(prompt('Informe o comprimento do lado de um quadrado: '), 10);

        alert(`Área do quadrado: ${lado**2}  Perímetro do quadrado: ${lado*4}`);
    </script>
