<body>
    <script>
        /*Façaum algortimo para calculara nota semestral de um aluno. A nota semenestral é obtida pela média aritmética entre a nota de 2 bimestres. 
        Cada nota de bimestre é composta por 2 notas de provas.*/

        let media = 0;

        for (var i = 0; i < 2; i++) {
            for (var k = 0; k < 2; k++) {
                var num = parseFloat(prompt(`Informe a nota da ${k+1}º prova do ${i+1}º bimestre: `), 10);
                media += num;
            }
        }

        console.log(`A sua média semestral ficou em: ${media/4}`);

    </script>
</body>
