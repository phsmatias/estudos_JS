    <script>
        /*ENUNCIADO: Faça um algortimo que transforme uma velocidade fornecida em m/s pelo usuário para Km/h
        . Para tal, multiplique o valor em m/s por 3,6*/

        var velocidade = parseFloat(prompt('Informe a velocidade em m/s e veja sua conversão para Km/h:'), 10);

        console.log(`${velocidade} m/s equivale a ${(velocidade * 3.6)} Km/h`);

    </script>
