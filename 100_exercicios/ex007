<body>
    <script>
        //ENUNCIADO: Solicitar a idade de uma pessoa em dias e informar na tela a idade em anos, meses e dias.

        var dias = parseInt(prompt('Informe sua idade em dias:'), 10);
        let anos = dias/365;
        let meses = dias/30;

        console.log(`Você tem ${anos} anos ${meses} meses e ${dias} dias.`);
    </script>
